<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="start">

    <me.herbix.dice.DiceView
        android:id="@+id/dice1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        />

    <me.herbix.dice.DiceView
        android:id="@+id/dice2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/dice1"
        android:layout_toEndOf="@id/dice1"
        />

    <me.herbix.dice.DiceView
        android:id="@+id/dice3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/dice2"
        android:layout_toEndOf="@id/dice2"
        />

    <me.herbix.dice.DiceView
        android:id="@+id/dice4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/dice3"
        android:layout_toEndOf="@id/dice3"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="-10dp"
        android:layout_marginEnd="-10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_right_arrow"
        />

</RelativeLayout>