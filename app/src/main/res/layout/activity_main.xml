<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="420dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <me.herbix.dice.DiceView
            android:id="@+id/blueDice"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:onClick="rollDice"
            app:diceColor="#44c"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roll"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="rollBoth"
            />

        <me.herbix.dice.DiceView
            android:id="@+id/redDice"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true"
            android:onClick="rollDice"
            app:diceColor="#c44"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rollHisBlue"
        android:layout_width="40dp"
        android:layout_height="240dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rollHisRed"
        android:layout_width="40dp"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true">

    </RelativeLayout>

    <me.herbix.dice.DiceStatusView
        android:id="@+id/blueStatus"
        android:layout_width="60dp"
        android:layout_height="240dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:diceStatusColor="#b4b4ff"
        app:topSmall="true"/>


    <me.herbix.dice.DiceStatusView
        android:id="@+id/redStatus"
        android:layout_width="60dp"
        android:layout_height="240dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:diceStatusColor="#ffb4b4"
        app:topSmall="false"/>

</RelativeLayout>
